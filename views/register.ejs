            <option value="AP Linear Algebra">AP Linear Algebra</option>
            <option value="Multivariable Calculus">Multivariable Calculus</option>
            <option value="AP Multivariable Calculus">AP Multivariable Calculus</option>
        </select><br>

        <label class="form-label" for="english">English: </label><br>
        <select class="form-input" name="english" id="english" required>
            <option value="English 6">English 6</option>
            <option value="English 7">English 7</option>
            <option value="English 8">English 8</option>
            <option value="English 9">English 9</option>
            <option value="Hon. English 9">Hon. English 9</option>
            <option value="English 10">English 10</option>
            <option value="Hon. English 10">Hon. English 10</option>
            <option value="English 11">English 11</option>
            <option value="Hon. English 11">Hon. English 11</option>
            <option value="English 12">English 12</option>
            <option value="Hon. English 12">Hon. English 12</option>
            <option value="AP Language">AP Language</option>
            <option value="AP Literature">AP Literature</option>
        </select><br>

        <label class="form-label" for="socialStudies">Social Studies: </label><br>
        <select class="form-input" name="socialStudies" id="socialStudies" required>
            <option value="US History">US History</option>
            <option value="Hon. US History">Hon. US History</option>
            <option value="AP US History">AP US History</option>
