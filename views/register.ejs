<%- include("partials/header") %>

<style>

    nav {
        position: fixed;
        z-index: 2;
    }

    h1 {
        font-size: 50px;
        color: var(--b1)
    }

    form {
        position: relative;
        top: 80px;
        width: min(500px, 100vw);
        margin: 0 auto;
        text-align: center;
        border: 2px solid var(--b1);
        border-radius: 20px;
        background: var(--b3);
        margin-bottom: 30px;
    }

    .form-input {
        position: relative;
        margin-bottom: 1rem;
        width: 100%;
        margin-top: 5px;
        height: 35px;
        border-radius: 15px;
        padding-left: 7px;
        outline: none;
        border: 2px solid var(--b1);
        transition-duration: 100ms;
    }

    .form-input:focus {
        border: 2px solid var(--blue);
    }

    .form-label {
        margin-bottom: 1rem;
        margin-left: 20px;
        font-size: 1rem;
        /* float: left; */
    }

    form button {
        margin-top: 10px;
        margin-bottom: 30px;
        background-color: var(--b1);
        color: white;
        padding: 15px 20px;
        border-radius: 1rem;
        border: none;
        font-size: 1.5rem;
        width: 200px;
    }

    form button:hover {
        cursor: pointer;
        background-color: #2a2b2e;
        color: white;
        transition-duration: 0.2s;
    }
    
    #inputs {
        text-align: left;
        position: relative;
        left: 50%;
        width: 75%;
        transform: translateX(-50%);
        margin: 0;
    }
</style>

<form method="post" action="/register">
    <h1>Register</h1>
    <div id="inputs">
        <label class="form-label" for="name">Name: </label><br>
        <input class="form-input" type="text" name="name" id="name" required><br/>

        <label class="form-label" for="email">Email: </label><br>
        <input class="form-input" type="email" name="email" id="email" required><br/>

        <label class="form-label" for="password">Password: </label><br>
        <input class="form-input" type="password" name="password" id="password" required><br/>

        <label class="form-label" for="school">School: </label><br>
        <input class="form-input" type="text" name="school" id="school" required><br/>

        <label class="form-label" for="pn">Phone Number: </label><br>
        <input class="form-input" type="text" name="pn" id="pn" required><br/>

        <label class="form-label" for="math">Math: </label><br>
        <select class="form-input" name="math" id="math" required>
            <option value="Math 6">Math 6</option>
            <option value="Math 7">Math 7</option>
            <option value="Math 8">Math 8</option>
            <option value="Algebra 1">Algebra 1</option>
