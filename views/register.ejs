            <option value="Philosophy">Philosophy</option>
            <option value="AP Philosophy">AP Philosophy</option>
            <option value="AP Microeconomics">AP Microeconomics</option>
            <option value="AP Macroeconomics">AP Macroeconomics</option>
            <option value="AP Psychology">AP Psychology</option>
            <option value="Law 1">Law 1</option>
            <option value="Law 2">Law 2</option>
        </select><br>

        <label class="form-label" for="science">Science: </label><br>
        <select class="form-input" name="science" id="science" required>
            <option value="Science 6">Science 6</option>
            <option value="Science 7">Science 7</option>
            <option value="Science 8">Science 8</option>
            <option value="Biology">Biology</option>
            <option value="Hon. Biology">Hon. Biology</option>
            <option value="AP Biology">AP Biology</option>
            <option value="Chemistry">Chemistry</option>
            <option value="Hon. Chemistry">Hon. Chemistry</option>
            <option value="AP Chemistry">AP Chemistry</option>
            <option value="Physics">Physics</option>
            <option value="Hon. Physics">Hon. Physics</option>
            <option value="AP Physics 1">AP Physics 1</option>
