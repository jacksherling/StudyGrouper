<%- include("partials/header") %>

<style>
    h1 {
        font-size: 50px;
        color: var(--b1)
    }

    form {
        position: relative;
        top: 20px;
        width: min(500px, 100vw);
        margin: 0 auto;
        text-align: center;
        border: 2px solid var(--b1);
        border-radius: 20px;
        background: var(--b3);
        top: calc(50% - 65px);
        transform: translateY(-50%);
    }

    .form-input {
        position: relative;
        margin-bottom: 1rem;
        width: 100%;
        margin-top: 5px;
        height: 35px;
        border-radius: 15px;
        padding-left: 7px;
        outline: none;
        border: 2px solid var(--b1);
        transition-duration: 100ms;
    }

    .form-input:focus {
        border: 2px solid var(--blue);
    }

    .form-label {
        margin-bottom: 1rem;
        margin-left: 20px;
        font-size: 1rem;
        /* float: left; */
    }

    form button {
        margin-top: 10px;
        margin-bottom: 30px;
        background-color: var(--b1);
        color: white;
        padding: 15px 20px;
        border-radius: 1rem;
        border: none;
        font-size: 1.5rem;
        width: 200px;
    }

    form button:hover {
        cursor: pointer;
        background-color: #2a2b2e;
        color: white;
        transition-duration: 0.2s;
    }
    
    #inputs {
        text-align: left;
        position: relative;
        left: 50%;
        width: 75%;
        transform: translateX(-50%);
        margin: 0;
    }
</style>

<form action="/login" method="POST">
    <h1>Login</h1>
    <div id="inputs">
        <label class="form-label" for="email">Email: </label>
        <input class="form-input" type="text" name="email" id="email"><br/>
        <label class="form-label" for="password">Password: </label>
        <input class="form-input" type="password" name="password" id="password"><br/>
    </div>
    <button type="submit">Login</button>
</form>

<%- include("partials/footer") %>